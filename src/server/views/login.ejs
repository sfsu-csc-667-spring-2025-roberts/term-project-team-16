<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/header.css">
</head>
<body>
    <%- include("shared/header") %>
    <div class="auth-container">
        <form class="auth-form" action="/auth/login" method="POST">
            <div class="auth-title">Sign in to your account</div>
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="auth-error"><%= error %></div>
            <% } %>
            <label for="usernameOrEmail">Username or Email</label>
            <input type="text" id="usernameOrEmail" name="usernameOrEmail" required autocomplete="username" placeholder="example@sfsu.edu or ex.user">

            <label for="password">Password</label>
            <input type="password" id="password" name="password" required autocomplete="current-password" placeholder="Enter your password">

            <button class="auth-btn" type="submit">Login</button>
            <div class="auth-alt">
                Don't have an account?
                <a href="/auth/register">Register here</a>
            </div>
        </form>
    </div>
</body>
</html>